# Nginx configuration for Azure Communication Services Web Dialer
# Copy this file to: /etc/nginx/sites-available/azuredialer
# Then create symbolic link: sudo ln -s /etc/nginx/sites-available/azuredialer /etc/nginx/sites-enabled/
#
# IMPORTANT: Replace 'your-domain.com' with your actual domain name

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;

    # Redirect HTTP to HTTPS (after SSL is set up)
    # return 301 https://$server_name$request_uri;

    # Temporarily allow HTTP for initial SSL setup
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts for long calls
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logging
    access_log /var/log/nginx/azuredialer_access.log;
    error_log /var/log/nginx/azuredialer_error.log;
}

